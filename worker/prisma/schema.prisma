generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Action {
  id              String          @id
  zapId           String
  actionId        String
  sortingOrder    Int             @default(0)
  metadata        Json            @default("{}")
  AvailableAction AvailableAction @relation(fields: [actionId], references: [id])
  Zap             Zap             @relation(fields: [zapId], references: [id])
}

model AvailableAction {
  id     String   @id
  name   String
  image  String?
  Action Action[]
}

model AvailableTrigger {
  id      String    @id
  name    String
  image   String?
  Trigger Trigger[]
}

model Trigger {
  id               String           @id
  zapId            String           @unique
  triggerId        String
  metadata         Json             @default("{}")
  AvailableTrigger AvailableTrigger @relation(fields: [triggerId], references: [id])
  Zap              Zap              @relation(fields: [zapId], references: [id])
}

model User {
  id       String  @id
  name     String?
  password String?
  email    String?
  Zap      Zap[]
}

model Zap {
  id      String   @id
  userId  String
  name    String?
  Action  Action[]
  Trigger Trigger?
  User    User     @relation(fields: [userId], references: [id])
  ZapRun  ZapRun[]
}

model ZapRun {
  id           String        @id
  zapId        String
  Zap          Zap           @relation(fields: [zapId], references: [id])
  ZapRunOutbox ZapRunOutbox?
}

model ZapRunOutbox {
  id       String @id
  zapRunId String @unique
  ZapRun   ZapRun @relation(fields: [zapRunId], references: [id])
}
